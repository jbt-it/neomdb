{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true
  },
  "include": [
      "src/**/*.ts",
      "test/**/*.ts"
   ],
  "exclude": [
      "node_modules"
  ]
}